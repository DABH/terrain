{
    "compilerOptions": {
        "newLine": "LF",
        "jsx": "react",
        "module": "commonjs",
        "sourceMap": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "strictNullChecks": true,
        "target": "es6",
        "typeRoots": [
            "../src/typings",
            "../node_modules/@types"
        ],
        "experimentalDecorators": true,
        "allowJs": true,
        "declaration": false,
        "outDir": "./build/"
    },
    "include": [
        "src",
        "../shared"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}
