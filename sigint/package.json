{
  "name": "sigint",
  "version": "1.0.0",
  "description": "Terrain Analytics Server",
  "main": "src/Main.ts",
  "private": true,
  "scripts": {
    "start-dev": "nodemon --exec node -r ts-node/register -- ./src/Main.ts",
    "start": "node build/src/Main.js",
    "postinstall": "tsc -p .",
    "lint": "tslint -c tslint.json --fix --project tsconfig.json",
    "style": "tsfmt -r | grep replaced || exit 0 && exit 1",
    "fix": "yarn run style && yarn run lint;",
    "test": "jest . --forceExit --coverage",
    "bench": "node -r ts-node/register bench/Main.ts",
    "doc": "apidoc -i src"
  },
  "repository": {
    "type": "git",
    "url": "http://git.terrain.int/terrain/Search"
  },
  "authors": [
    "Han Solo"
  ],
  "pre-commit": [
    "lint",
    "style"
  ],
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/test/.+Tests\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true
      },
      "DEV": true
    },
    "testURL": "http://localhost"
  },
  "apidoc": {
    "title": "sigint: Terrain Analytics Server API Documentation",
    "url": "https://api.terraindata.com/sigint/v1"
  },
  "dependencies": {
    "command-line-args": "^5.0.2",
    "command-line-usage": "^5.0.5",
    "date-format": "^1.2.0",
    "elasticsearch": "^15.1.1",
    "jsurl": "^0.1.5",
    "kcors": "^2.2.2",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-logger-winston": "^0.0.2",
    "koa-response-time": "^2.0.0",
    "koa-router": "^7.4.0",
    "koa-static-server": "^1.3.4",
    "lodash": "^4.17.10",
    "string-hash": "^1.1.3",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/elasticsearch": "^5.0.24",
    "@types/jest": "^23.1.5",
    "@types/koa": "^2.0.46",
    "@types/node": "^10.5.2",
    "apidoc": "^0.17.6",
    "bench-rest": "^1.2.4",
    "jest": "^23.4.0",
    "nodemon": "^1.18.1",
    "supertest": "^3.1.0",
    "ts-jest": "^23.0.0",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2",
    "typescript-formatter": "^7.2.2",
    "webpack": "^4.16.0"
  }
}
