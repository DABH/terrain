{
  "name": "sigint",
  "version": "1.0.0",
  "description": "Terrain Analytics Server",
  "main": "src/Main.ts",
  "private": true,
  "scripts": {
    "start-dev": "nodemon --exec node -r ts-node/register -- ./src/Main.ts",
    "start": "node build/src/Main.js",
    "postinstall": "tsc -p .",
    "lint": "tslint -c tslint.json --fix --project tsconfig.json",
    "style": "tsfmt -r | grep replaced || exit 0 && exit 1",
    "fix": "yarn run style && yarn run lint;",
    "test": "jest . --forceExit --coverage",
    "bench": "node -r ts-node/register bench/Main.ts",
    "doc": "apidoc -i src"
  },
  "repository": {
    "type": "git",
    "url": "http://git.terrain.int/terrain/Search"
  },
  "authors": [
    "Han Solo"
  ],
  "pre-commit": [
    "lint",
    "style"
  ],
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "/test/.+Tests\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
	"diagnostics": true
      },
      "DEV": true
    },
    "testURL": "http://localhost"
  },
  "apidoc": {
    "title": "sigint: Terrain Analytics Server API Documentation",
    "url": "https://api.terraindata.com/sigint/v1"
  },
  "dependencies": {
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.0.2",
    "date-format": "^2.0.0",
    "elasticsearch": "^15.1.1",
    "jsurl": "^0.1.5",
    "kcors": "^2.2.2",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-logger-winston": "^0.0.2",
    "koa-response-time": "^2.1.0",
    "koa-router": "^7.4.0",
    "koa-static-server": "^1.4.0",
    "lodash": "^4.17.14",
    "string-hash": "^1.1.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/elasticsearch": "^5.0.34",
    "@types/jest": "^24.0.15",
    "@types/koa": "^2.0.49",
    "@types/node": "^12.6.2",
    "apidoc": "^0.17.7",
    "babel-core": "^6.26.3",
    "bench-rest": "^1.2.4",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "typescript-formatter": "^7.2.2",
    "webpack": "^4.35.3"
  }
}
