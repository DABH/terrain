{
  "name": "sigint",
  "version": "1.0.0",
  "description": "Terrain Analytics Server",
  "main": "src/Main.ts",
  "private": true,
  "scripts": {
    "start-dev": "nodemon --exec ./node_modules/.bin/ts-node $NODE_DEBUG_OPTION --harmony --max_executable_size=8192 --max_old_space_size=8192 -- ./src/Main.ts",
    "start": "node build/src/Main.js",
    "postinstall": "tsc -p .",
    "lint": "tslint -c tslint.json --fix --type-check --project tsconfig.json",
    "style": "tsfmt -r | grep replaced || exit 0 && exit 1",
    "fix": "yarn run style && yarn run lint;",
    "test": "jest . --forceExit --coverage",
    "bench": "ts-node test/Benchmark.ts",
    "doc": "apidoc -i src"
  },
  "repository": {
    "type": "git",
    "url": "http://git.terrain.int/terrain/Search"
  },
  "authors": [
    "Han Solo"
  ],
  "pre-commit": [
    "lint",
    "style"
  ],
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/test/.+Tests\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "mapCoverage": true,
    "globals": {
      "DEV": true
    },
    "testURL": "http://localhost"
  },
  "apidoc": {
    "title": "sigint: Terrain Analytics Server API Documentation",
    "url": "https://api.terraindata.com/sigint/v1"
  },
  "dependencies": {
    "command-line-args": "^4.0.7",
    "command-line-usage": "^4.0.1",
    "date-format": "^1.1.0",
    "elasticsearch": "^13.3.1",
    "jsurl": "^0.1.5",
    "kcors": "^2.2.1",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-logger-winston": "^0.0.2",
    "koa-response-time": "^2.0.0",
    "koa-router": "^7.2.1",
    "koa-static-server": "^1.3.2",
    "lodash": "^4.17.4",
    "string-hash": "^1.1.3",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "@types/koa": "^2.0.39",
    "@types/node": "^8.0.32",
    "apidoc": "^0.17.6",
    "bench-rest": "^1.2.4",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.1.0",
    "ts-loader": "^2.3.7",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "typescript-formatter": "^6.0.0",
    "webpack": "^3.5.6"
  }
}
