{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "sourceMap": true,
        "inlineSources": true,
        "inlineSourceMap": true,
        "target": "es6",
        "typeRoots": [
            "./src/typings",
            "./node_modules/@types"
        ],
        "experimentalDecorators": true,
        "allowJs": true,
        "declaration": true,
        "outDir": "./build/"
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}
