{
    "compilerOptions": {
        "newLine": "LF",
        "jsx": "react",
        "module": "commonjs",
        "sourceMap": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "target": "es6",
        "typeRoots": [
            "./src/typings",
            "./node_modules/@types"
        ],
        "experimentalDecorators": true,
        "declaration": false,
        "outDir": "./build/"
    },
    "exclude": [
        "**/*bundle*.js",
        "node_modules",
        "midway",
        "build",
        "coverage"
    ]
}
