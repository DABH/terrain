{
    "compilerOptions": {
        "newLine": "LF",
        "jsx": "react",
        "module": "commonjs",
        "sourceMap": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "target": "es6",
        "typeRoots": [
            "./src/typings",
            "./node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "library*": ["src/app/library/*"],
            "auth*": ["src/app/auth/*"],
            "analytics*": ["src/app/analytics/*"],
            "builder*": ["src/app/builder/*"],
            "charts*": ["src/app/charts/*"],
            "common*": ["src/app/common/*"],
            "deploy*": ["src/app/deploy/*"],
            "fileimport*": ["src/app/fileimport/*"],
            "images*": ["src/images/*"],
            "manual*": ["src/app/manual/*"],
            "roles*": ["src/app/roles/*"],
            "schema*": ["src/app/schema/*"],
            "shared*": ["shared/*"],
            "store*": ["src/app/store/*"],
            "tql*": ["src/app/tql/*"],
            "users*": ["src/app/users/*"],
            "util*": ["src/app/util/*"],
            "x*": ["src/app/x/*"]
        },
        "experimentalDecorators": true,
        "declaration": false,
        "outDir": "./build/"
    },
    "exclude": [
        "**/*bundle*.js",
        "node_modules",
        "analytics.js/node_modules",
        "midway",
        "build",
        "coverage"
    ]
}
