{
    "compilerOptions": {
        "newLine": "LF",
        "jsx": "react",
        "lib": ["es7", "dom"],
        "module": "commonjs",
        "sourceMap": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "target": "es6",
        "typeRoots": [
            "./shared/typings",
            "./node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "library/*": ["src/app/library/*"],
            "auth/*": ["src/app/auth/*"],
            "analytics/*": ["src/app/analytics/*"],
            "app/*": ["src/app/*"],
            "builder/*": ["src/app/builder/*"],
            "charts/*": ["src/app/charts/*"],
            "colors/*": ["src/app/colors/*"],
            "common/*": ["src/app/common/*"],
            "control/*": ["src/app/control/*"],
            "database/*": ["src/database/*"],
            "deploy/*": ["src/app/deploy/*"],
            "etl/*": ["src/app/etl/*"],
            "fileImport/*": ["src/app/fileImport/*"],
            "images/*": ["src/images/*"],
            "jobs/*": ["src/app/jobs/*"],
            "manual/*": ["src/app/manual/*"],
            "roles/*": ["src/app/roles/*"],
            "scheduler/*": ["src/app/scheduler/*"],
            "schema/*": ["src/app/schema/*"],
            "shared/*": ["shared/*"],
            "src/*": ["src/*"],
            "store/*": ["src/app/store/*"],
            "tql/*": ["src/app/tql/*"],
            "users/*": ["src/app/users/*"],
            "util/*": ["src/app/util/*"],
            "x/*": ["src/app/x/*"],
            "test-helpers/*": ["src/test/test-helpers/*"]
        },
        "experimentalDecorators": true,
        "declaration": false,
        "outDir": "./build/"
    },
    "exclude": [
        "**/*bundle*.js",
        "node_modules",
        "analytics.js",
        "sigint",
        "midway",
        "build",
        "coverage"
    ]
}
