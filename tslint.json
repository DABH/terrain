{
  "lintOptions": {
    "typeCheck": true
  },
  "extends": "tslint:recommended",
  "rules": {
    "quotemark": [true,
      "single",
      "avoid-escape"
    ],
    "file-header": [true,
      "Copyright \\d{4} Terrain Data, Inc."
    ],
    "one-line": [true,
      "check-catch",
      "check-else",
      "check-finally",
      "check-whitespace"
    ],
    "variable-name": [true,
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ],
    "no-string-literal": false,
    "prefer-for-of": false,
    "interface-name": [true, "never-prefix"]
  }
}
